<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--日志模块-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--设置别名-->
    <typeAliases>
        <package name="com.book.shop.book.domain;com.book.shop.admin.domain"/>
    </typeAliases>

    <!--指定dao文件的位置-->
    <mappers>
<!--        <mapper resource="com.chuanqihou.dao"/>-->
        <package name="com.book.shop.book.dao;com.book.shop.admin.dao"/>
    </mappers>

</configuration>
